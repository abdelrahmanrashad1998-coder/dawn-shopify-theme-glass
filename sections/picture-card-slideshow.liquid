{{ 'section-picture-card-slideshow.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="picture-card-slideshow section-{{ section.id }}-padding">
    <div
      class="picture-card-slideshow__container"
      data-autoplay="{{ section.settings.auto_rotate }}"
      data-speed="{{ section.settings.change_slides_speed }}"
      data-slides-to-show="{{ section.settings.slides_to_show }}"
      data-slides-to-show-mobile="{{ section.settings.slides_to_show_mobile }}"
      data-animation-easing="{{ section.settings.animation_easing }}"
    >
      <div
        class="picture-card-slideshow__track"
        id="PictureCardSlider-{{ section.id }}"
      >
        <div class="picture-card-slideshow__slides">
          {%- for block in section.blocks -%}
            <div
              class="picture-card-slideshow__slide"
              id="PictureCardSlide-{{ section.id }}-{{ forloop.index }}"
              {{ block.shopify_attributes }}
            >
              <div class="picture-card">
                <div class="picture-card__media">
                  {%- if block.settings.image -%}
                    {%- liquid
                      assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round
                      assign sizes = '(min-width: 1200px) 300px, (min-width: 750px) 250px, 200px'
                      assign widths = '200, 250, 300, 400, 500, 600'
                    -%}
                    {{
                      block.settings.image
                      | image_url: width: 600
                      | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths, class: 'picture-card__image'
                    }}
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'picture-card__placeholder' }}
                  {%- endif -%}
                </div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>
  </div>
</div>

<script src="{{ 'component-picture-card-slideshow.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Picture Slideshow",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "select",
      "id": "slides_to_show",
      "options": [
        {
          "value": "1",
          "label": "1 slide"
        },
        {
          "value": "2",
          "label": "2 slides"
        },
        {
          "value": "3",
          "label": "3 slides"
        },
        {
          "value": "4",
          "label": "4 slides"
        }
      ],
      "default": "3",
      "label": "Slides to show (desktop)"
    },
    {
      "type": "select",
      "id": "slides_to_show_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 slide"
        },
        {
          "value": "2",
          "label": "2 slides"
        }
      ],
      "default": "1",
      "label": "Slides to show (mobile)"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 1,
      "max": 20,
      "step": 1,
      "unit": "s",
      "label": "Animation speed (seconds per slide)",
      "default": 4,
      "info": "1-2s = Fast, 3-5s = Medium, 6-10s = Slow, 10s+ = Very Slow"
    },
    {
      "type": "select",
      "id": "speed_preset",
      "options": [
        {
          "value": "custom",
          "label": "Custom (use slider above)"
        },
        {
          "value": "1",
          "label": "Very Fast (1s)"
        },
        {
          "value": "2",
          "label": "Fast (2s)"
        },
        {
          "value": "3",
          "label": "Medium-Fast (3s)"
        },
        {
          "value": "4",
          "label": "Medium (4s)"
        },
        {
          "value": "6",
          "label": "Slow (6s)"
        },
        {
          "value": "8",
          "label": "Very Slow (8s)"
        },
        {
          "value": "12",
          "label": "Ultra Slow (12s)"
        }
      ],
      "default": "custom",
      "label": "Speed presets"
    },
    {
      "type": "select",
      "id": "animation_easing",
      "options": [
        {
          "value": "linear",
          "label": "Linear (constant speed)"
        },
        {
          "value": "ease-in-out",
          "label": "Smooth (ease in/out)"
        },
        {
          "value": "ease-out",
          "label": "Gentle (ease out)"
        }
      ],
      "default": "linear",
      "label": "Animation style"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 10,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Picture Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
