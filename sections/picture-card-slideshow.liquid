{{ 'section-picture-card-slideshow.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="picture-card-slideshow section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <div class="title-wrapper-with-link title-wrapper--self-padded-mobile title-wrapper--no-top-margin">
        <h2 class="title inline-richtext {{ section.settings.heading_size }}">
          {{ section.settings.heading }}
        </h2>
      </div>
    {%- endif -%}

    <div
      class="picture-card-slideshow__container"
      data-autoplay="{{ section.settings.auto_rotate }}"
      data-speed="{{ section.settings.change_slides_speed }}"
      data-slides-to-show="{{ section.settings.slides_to_show }}"
      data-slides-to-show-mobile="{{ section.settings.slides_to_show_mobile }}"
    >
      {%- if section.settings.auto_rotate and section.blocks.size > 1 -%}
        <div class="picture-card-slideshow__controls">
          <button
            type="button"
            class="picture-card-slideshow__button picture-card-slideshow__button--prev"
            aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
            aria-controls="PictureCardSlider-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
          
          <div class="picture-card-slideshow__counter">
            <span class="picture-card-slideshow__counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="picture-card-slideshow__counter--total">{{ section.blocks.size }}</span>
          </div>
          
          <button
            type="button"
            class="picture-card-slideshow__button picture-card-slideshow__button--next"
            aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
            aria-controls="PictureCardSlider-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>

          {%- if section.settings.auto_rotate -%}
            <button
              type="button"
              class="picture-card-slideshow__autoplay"
              aria-label="{{ 'sections.slideshow.pause_slideshow' | t }}"
            >
              <span class="svg-wrapper">
                {{- 'icon-pause.svg' | inline_asset_content -}}
              </span>
              <span class="svg-wrapper">
                {{- 'icon-play.svg' | inline_asset_content -}}
              </span>
            </button>
          {%- endif -%}
        </div>
      {%- endif -%}

      <div
        class="picture-card-slideshow__track"
        id="PictureCardSlider-{{ section.id }}"
        aria-live="polite"
        aria-atomic="true"
      >
        <div class="picture-card-slideshow__slides">
          {%- for block in section.blocks -%}
            <div
              class="picture-card-slideshow__slide"
              id="PictureCardSlide-{{ section.id }}-{{ forloop.index }}"
              {{ block.shopify_attributes }}
              role="group"
              aria-roledescription="{{ 'sections.slideshow.slide' | t }}"
              aria-label="{{ forloop.index }} {{ 'general.slider.of' | t }} {{ forloop.length }}"
              tabindex="-1"
            >
              <div class="picture-card">
                <div class="picture-card__media">
                  {%- if block.settings.image -%}
                    {%- liquid
                      assign height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio | round
                      assign sizes = '(min-width: 1200px) 300px, (min-width: 750px) 250px, 200px'
                      assign widths = '200, 250, 300, 400, 500, 600'
                    -%}
                    {{
                      block.settings.image
                      | image_url: width: 600
                      | image_tag: loading: 'lazy', height: height, sizes: sizes, widths: widths, class: 'picture-card__image'
                    }}
                  {%- else -%}
                    {{ 'image' | placeholder_svg_tag: 'picture-card__placeholder' }}
                  {%- endif -%}
                </div>
                
                {%- if block.settings.heading != blank or block.settings.text != blank -%}
                  <div class="picture-card__content">
                    {%- if block.settings.heading != blank -%}
                      <h3 class="picture-card__heading {{ block.settings.heading_size }}">
                        {{ block.settings.heading }}
                      </h3>
                    {%- endif -%}
                    
                    {%- if block.settings.text != blank -%}
                      <div class="picture-card__text rte">
                        {{ block.settings.text }}
                      </div>
                    {%- endif -%}
                    
                    {%- if block.settings.button_label != blank -%}
                      <div class="picture-card__button">
                        <a
                          {% if block.settings.link %}
                            href="{{ block.settings.link }}"
                          {% else %}
                            role="link" aria-disabled="true"
                          {% endif %}
                          class="button {% if block.settings.button_style_secondary %}button--secondary{% else %}button--primary{% endif %}"
                        >
                          {{- block.settings.button_label | escape -}}
                        </a>
                      </div>
                    {%- endif -%}
                  </div>
                {%- endif -%}
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>

      {%- if section.blocks.size > 1 and section.settings.auto_rotate == false -%}
        <div class="picture-card-slideshow__controls">
          <button
            type="button"
            class="picture-card-slideshow__button picture-card-slideshow__button--prev"
            aria-label="{{ 'sections.slideshow.previous_slideshow' | t }}"
            aria-controls="PictureCardSlider-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
          
          <div class="picture-card-slideshow__counter">
            <span class="picture-card-slideshow__counter--current">1</span>
            <span aria-hidden="true"> / </span>
            <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
            <span class="picture-card-slideshow__counter--total">{{ section.blocks.size }}</span>
          </div>
          
          <button
            type="button"
            class="picture-card-slideshow__button picture-card-slideshow__button--next"
            aria-label="{{ 'sections.slideshow.next_slideshow' | t }}"
            aria-controls="PictureCardSlider-{{ section.id }}"
          >
            <span class="svg-wrapper">
              {{- 'icon-caret.svg' | inline_asset_content -}}
            </span>
          </button>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<script src="{{ 'component-picture-card-slideshow.js' | asset_url }}" defer="defer"></script>

{% schema %}
{
  "name": "Picture Slideshow",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Picture Gallery",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "slides_to_show",
      "options": [
        {
          "value": "1",
          "label": "1 slide"
        },
        {
          "value": "2",
          "label": "2 slides"
        },
        {
          "value": "3",
          "label": "3 slides"
        },
        {
          "value": "4",
          "label": "4 slides"
        }
      ],
      "default": "3",
      "label": "Slides to show (desktop)"
    },
    {
      "type": "select",
      "id": "slides_to_show_mobile",
      "options": [
        {
          "value": "1",
          "label": "1 slide"
        },
        {
          "value": "2",
          "label": "2 slides"
        }
      ],
      "default": "1",
      "label": "Slides to show (mobile)"
    },
    {
      "type": "checkbox",
      "id": "auto_rotate",
      "label": "Auto-rotate slides",
      "default": true
    },
    {
      "type": "range",
      "id": "change_slides_speed",
      "min": 3,
      "max": 9,
      "step": 2,
      "unit": "s",
      "label": "Change slides every",
      "default": 5
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "limit": 10,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "inline_richtext",
          "id": "heading",
          "default": "Card heading",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            }
          ],
          "default": "h2",
          "label": "Heading size"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Add some descriptive text for this card.</p>",
          "label": "Text"
        },
        {
          "type": "text",
          "id": "button_label",
          "default": "Learn more",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        },
        {
          "type": "checkbox",
          "id": "button_style_secondary",
          "label": "Use secondary button style",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Picture Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
