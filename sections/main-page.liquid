{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.page_background_image != blank -%}
    body {
      --background-image: url('{{ section.settings.page_background_image | image_url }}');
      --background-opacity: {{ section.settings.page_background_opacity | divided_by: 100.0 }};
      --background-size: {{ section.settings.page_background_size | default: 'cover' }};
      --background-position: {{ section.settings.page_background_position | default: 'center' }};
    }
  {%- endif -%}
{%- endstyle -%}

{% comment %} Check if this is a policy page - Multiple Detection Methods {% endcomment %}
{%- assign is_policy_page = false -%}

<!-- Method 1: Direct URL comparison -->
{%- for policy in shop.policies -%}
  {%- if policy.url == page.url -%}
    {%- assign is_policy_page = true -%}
    {%- break -%}
  {%- endif -%}
{%- endfor -%}

<!-- Method 2: Check for /policies/ in URL -->
{%- if page.url contains '/policies/' -%}
  {%- assign is_policy_page = true -%}
{%- endif -%}

<!-- Method 3: Check if page title matches policy titles -->
{%- assign policy_titles = '' -%}
{%- for policy in shop.policies -%}
  {%- assign policy_titles = policy_titles | append: '|' | append: policy.title | append: '|' -%}
{%- endfor -%}
{%- if policy_titles contains page.title -%}
  {%- assign is_policy_page = true -%}
{%- endif -%}

<!-- Method 4: Check page handle vs policy handles -->
{%- for policy in shop.policies -%}
  {%- if page.handle == policy.handle -%}
    {%- assign is_policy_page = true -%}
    {%- break -%}
  {%- endif -%}
{%- endfor -%}

<!-- Method 5: Check if URL contains policy handle -->
{%- for policy in shop.policies -%}
  {%- if page.url contains policy.handle -%}
    {%- assign is_policy_page = true -%}
    {%- break -%}
  {%- endif -%}
{%- endfor -%}

<!-- DEBUG: Show visual indicator for policy page -->
{%- if is_policy_page -%}
