{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.page_background_image != blank -%}
    body {
      --background-image: url('{{ section.settings.page_background_image | image_url }}');
      --background-opacity: {{ section.settings.page_background_opacity | divided_by: 100.0 }};
      --background-size: {{ section.settings.page_background_size | default: 'cover' }};
      --background-position: {{ section.settings.page_background_position | default: 'center' }};
    }
  {%- endif -%}
{%- endstyle -%}

{% comment %} Check if this is a policy page {% endcomment %}
{%- assign is_policy_page = false -%}
{%- for policy in shop.policies -%}
  {%- if policy.url == page.url -%}
    {%- assign is_policy_page = true -%}
    {%- break -%}
  {%- endif -%}
{%- endfor -%}

<!-- Debug info to check policy detection -->
<!-- Current page URL: {{ page.url }} -->
<!-- Shop policies: {% for policy in shop.policies %}{{ policy.title }} ({{ policy.url }}), {% endfor %} -->
<!-- Is policy page: {{ is_policy_page }} -->

{% comment %} Debug: Show visible indicator if policy page {% endcomment %}
{%- if is_policy_page -%}
  <div style="background: red; color: white; padding: 10px; margin: 10px; text-align: center; font-weight: bold;">
    üîç DEBUG: This is a POLICY PAGE - Glass effect should be active!
  </div>
{%- endif -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <div class="page-content-glass{% if is_policy_page %} policy-page-glass{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}" 
       style="border: 10px solid purple !important; 
              background: rgba(255, 255, 255, 0.95) !important; 
              backdrop-filter: blur(15px) !important;
              border-radius: 20px !important;
              padding: 40px !important;
              margin: 20px auto !important;
              max-width: 900px !important;
              position: relative !important;">
    <div style="background: yellow; color: red; padding: 10px; margin: 10px; font-weight: bold; text-align: center;">
      üö® TEMPLATE TEST: You are viewing main-page.liquid section üö®
    </div>
    <h1 class="main-page-title page-title h0{% if is_policy_page %} policy-title{% endif %}{% if settings.animations_reveal_on_scroll %} animate--slide-in{% endif %}">
      {{ page.title | escape }}
    </h1>
    <div class="rte{% if is_policy_page %} policy-content{% endif %}{% if settings.animations_reveal_on_scroll %} animate--slide-in{% endif %}">
      {{ page.content }}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Background Image"
    },
    {
      "type": "image_picker",
      "id": "page_background_image",
      "label": "Page Background Image",
      "info": "Upload an image to use as a fixed background for this page. This will override the global background image."
    },
    {
      "type": "range",
      "id": "page_background_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 100,
      "unit": "%",
      "label": "Background Image Opacity"
    },
    {
      "type": "select",
      "id": "page_background_size",
      "options": [
        {
          "value": "cover",
          "label": "Cover"
        },
        {
          "value": "contain",
          "label": "Contain"
        },
        {
          "value": "auto",
          "label": "Auto"
        }
      ],
      "default": "cover",
      "label": "Background Size"
    },
    {
      "type": "select",
      "id": "page_background_position",
      "options": [
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "bottom",
          "label": "Bottom"
        },
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center",
      "label": "Background Position"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}