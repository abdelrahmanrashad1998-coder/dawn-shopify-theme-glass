{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  {%- if section.settings.page_background_image != blank -%}
    body {
      --background-image: url('{{ section.settings.page_background_image | image_url }}');
      --background-opacity: {{ section.settings.page_background_opacity | divided_by: 100.0 }};
      --background-size: {{ section.settings.page_background_size | default: 'cover' }};
      --background-position: {{ section.settings.page_background_position | default: 'center' }};
    }
  {%- endif -%}
{%- endstyle -%}

{% comment %} Check if this is a policy page {% endcomment %}
{%- assign is_policy_page = false -%}
{%- for policy in shop.policies -%}
  {%- if policy.url == page.url -%}
    {%- assign is_policy_page = true -%}
    {%- break -%}
  {%- endif -%}
{%- endfor -%}

<div class="page-width page-width--narrow section-{{ section.id }}-padding">
  <div class="page-content-glass{% if is_policy_page %} policy-page-glass{% endif %}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %}">
    <h1 class="main-page-title page-title h0{% if is_policy_page %} policy-title{% endif %}{% if settings.animations_reveal_on_scroll %} animate--slide-in{% endif %}">
      {{ page.title | escape }}
    </h1>
    <div class="rte{% if is_policy_page %} policy-content{% endif %}{% if settings.animations_reveal_on_scroll %} animate--slide-in{% endif %}">
      {%- if section.settings.page.content != blank -%}
        {{ section.settings.page.content }}
      {%- else -%}
        <div class="placeholder-page-content">
          {%- if section.settings.page_background_image != blank -%}
            <div class="placeholder-content">
              <h2>{{ 'sections.main-page.onboarding.title' | t }}</h2>
              <p>{{ 'sections.main-page.onboarding.content' | t }}</p>
              {%- if settings.button_style_secondary -%}
                <a class="button button--primary" href="{{ routes.shop_url }}">{{ 'general.404.link' | t }}</a>
              {%- endif -%}
            </div>
          {%- endif -%}
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "page",
      "id": "page",
      "label": "t:sections.main-page.settings.page.label"
    },
    {
      "type": "header",
      "content": "t:sections.main-page.settings.header.content"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}