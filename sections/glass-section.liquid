{{ 'section-glass.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="glass-section">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="glass-container glass-{{ section.settings.glass_style }} width-{{ section.settings.banner_width }}" style="
      --glass-opacity: {{ section.settings.glass_opacity | divided_by: 100.0 }};
      --glass-blur: {{ section.settings.glass_blur }}px;
      --glass-border-radius: {{ section.settings.glass_border_radius }}px;
      --glass-border-width: {{ section.settings.glass_border_width }}px;
      --glass-border-opacity: {{ section.settings.glass_border_opacity | divided_by: 100.0 }};
      --glass-padding: {{ section.settings.glass_padding }}px;
      {% if section.settings.banner_width == 'custom' %}--custom-width: {{ section.settings.custom_width }}px;{% endif %}
    ">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <div class="glass-block glass-heading" {{ block.shopify_attributes }}>
              <h2 class="glass-heading-text {{ block.settings.heading_size }}">
                {{ block.settings.heading | escape }}
              </h2>
            </div>
          {%- when 'text' -%}
            <div class="glass-block glass-text" {{ block.shopify_attributes }}>
              <div class="glass-text-content rte">
                {{ block.settings.text }}
              </div>
            </div>
          {%- when 'button' -%}
            <div class="glass-block glass-button" {{ block.shopify_attributes }}>
              <a href="{{ block.settings.button_link }}" class="glass-button-link button button--primary">
                {{ block.settings.button_label | escape }}
              </a>
            </div>
          {%- when 'image' -%}
            <div class="glass-block glass-image" {{ block.shopify_attributes }}>
              {%- if block.settings.image != blank -%}
                <div class="glass-image-container">
                  <img
                    src="{{ block.settings.image | image_url: width: 800 }}"
                    alt="{{ block.settings.image.alt | escape }}"
                    class="glass-image-element"
                    loading="lazy"
                    width="{{ block.settings.image.width }}"
                    height="{{ block.settings.image.height }}"
                  >
                </div>
              {%- endif -%}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Glass Section",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "header",
      "content": "Glass Appearance"
    },
    {
      "type": "select",
      "id": "glass_style",
      "options": [
        {
          "value": "frosted",
          "label": "Frosted Glass"
        },
        {
          "value": "blurred",
          "label": "Blurred Glass"
        },
        {
          "value": "translucent",
          "label": "Translucent Glass"
        }
      ],
      "default": "frosted",
      "label": "Glass Style"
    },
    {
      "type": "range",
      "id": "glass_opacity",
      "min": 5,
      "max": 50,
      "step": 5,
      "unit": "%",
      "label": "Glass Opacity",
      "default": 10
    },
    {
      "type": "range",
      "id": "glass_blur",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Blur Effect",
      "default": 10
    },
    {
      "type": "range",
      "id": "glass_border_radius",
      "min": 0,
      "max": 50,
      "step": 2,
      "unit": "px",
      "label": "Border Radius",
      "default": 20
    },
    {
      "type": "range",
      "id": "glass_border_width",
      "min": 0,
      "max": 5,
      "step": 1,
      "unit": "px",
      "label": "Border Width",
      "default": 1
    },
    {
      "type": "range",
      "id": "glass_border_opacity",
      "min": 0,
      "max": 100,
      "step": 5,
      "unit": "%",
      "label": "Border Opacity",
      "default": 30
    },
    {
      "type": "range",
      "id": "glass_padding",
      "min": 20,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "Internal Padding",
      "default": 40
    },
    {
      "type": "header",
      "content": "Banner Width"
    },
    {
      "type": "select",
      "id": "banner_width",
      "options": [
        {
          "value": "narrow",
          "label": "Narrow (600px)"
        },
        {
          "value": "medium",
          "label": "Medium (800px)"
        },
        {
          "value": "wide",
          "label": "Wide (1000px)"
        },
        {
          "value": "full",
          "label": "Full Width"
        },
        {
          "value": "custom",
          "label": "Custom"
        }
      ],
      "default": "medium",
      "label": "Banner Width"
    },
    {
      "type": "range",
      "id": "custom_width",
      "min": 400,
      "max": 1200,
      "step": 50,
      "unit": "px",
      "label": "Custom Width",
      "default": 800,
      "info": "Only applies when Custom width is selected"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Glass Section Heading",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 3,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Add some text content to your glass section. This text will appear with a beautiful glass effect overlay.</p>",
          "label": "Text"
        }
      ]
    },
    {
      "type": "button",
      "name": "Button",
      "limit": 2,
      "settings": [
        {
          "type": "text",
          "id": "button_label",
          "default": "Button label",
          "label": "Button label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "limit": 1,
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Glass Section",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "button"
        }
      ]
    }
  ]
}
{% endschema %}
