{% doc %}
  @prompt
    transparent image with text banner like the one here but transparent 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-transparent-banner-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    min-height: {{ block.settings.banner_height }}px;
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    justify-content: {{ block.settings.horizontal_alignment }};
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-transparent-banner-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-transparent-banner-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: {{ block.settings.image_opacity | divided_by: 100.0 }};
  }

  .ai-transparent-banner-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #f5f5f5 0%, #e8e8e8 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    opacity: {{ block.settings.image_opacity | divided_by: 100.0 }};
  }

  .ai-transparent-banner-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-transparent-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-transparent-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    text-align: {{ block.settings.text_alignment }};
    padding: {{ block.settings.content_padding }}px;
    max-width: {{ block.settings.content_max_width }}px;
    width: 100%;
    background-color: {{ block.settings.content_background_color }};
    border-radius: {{ block.settings.content_border_radius }}px;
    backdrop-filter: blur({{ block.settings.backdrop_blur }}px);
    -webkit-backdrop-filter: blur({{ block.settings.backdrop_blur }}px);
    box-shadow: 0 {{ block.settings.content_shadow_vertical }}px {{ block.settings.content_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.content_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-transparent-banner-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    line-height: 1.2;
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px 0;
    text-shadow: {{ block.settings.text_shadow_horizontal }}px {{ block.settings.text_shadow_vertical }}px {{ block.settings.text_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.text_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-transparent-banner-text-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0 0 {{ block.settings.text_margin_bottom }}px 0;
    text-shadow: {{ block.settings.text_shadow_horizontal }}px {{ block.settings.text_shadow_vertical }}px {{ block.settings.text_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.text_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-transparent-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
    backdrop-filter: blur({{ block.settings.button_backdrop_blur }}px);
    -webkit-backdrop-filter: blur({{ block.settings.button_backdrop_blur }}px);
    box-shadow: 0 {{ block.settings.button_shadow_vertical }}px {{ block.settings.button_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.button_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-transparent-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  .ai-transparent-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background-color: rgba(255, 255, 255, 0.9);
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 14px;
    color: #666;
    z-index: 4;
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
  }

  @media screen and (max-width: 749px) {
    .ai-transparent-banner-{{ ai_gen_id }} {
      min-height: {{ block.settings.banner_height | times: 0.7 }}px;
    }

    .ai-transparent-banner-content-{{ ai_gen_id }} {
      padding: {{ block.settings.content_padding | times: 0.7 }}px;
      max-width: 90%;
    }

    .ai-transparent-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-transparent-banner-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-transparent-banner-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-transparent-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-transparent-banner-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-transparent-banner-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  {% if block.settings.overlay_opacity > 0 %}
    <div class="ai-transparent-banner-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-transparent-banner-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-transparent-banner-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-transparent-banner-text-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% endif %}

    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
      <a
        href="{{ block.settings.button_link }}"
        class="ai-transparent-banner-button-{{ ai_gen_id }}"
      >
        {{ block.settings.button_text }}
      </a>
    {% endif %}
  </div>

  {% unless block.settings.background_image %}
    <div class="ai-transparent-banner-empty-state-{{ ai_gen_id }}">
      Add a background image to get started
    </div>
  {% endunless %}
</div>

