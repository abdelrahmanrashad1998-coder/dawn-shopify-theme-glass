{% doc %}
  @prompt
    duplicated the current image with text but make it transparent 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-transparent-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-transparent-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-transparent-image-img-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    opacity: {{ block.settings.image_opacity | divided_by: 100.0 }};
    transition: opacity 0.3s ease;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-transparent-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    width: 100%;
    height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
    opacity: {{ block.settings.image_opacity | divided_by: 100.0 }};
  }

  .ai-transparent-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.5;
  }

  .ai-transparent-image-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 8px;
  }

  .ai-transparent-image-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    align-items: {{ block.settings.vertical_alignment }};
    justify-content: {{ block.settings.horizontal_alignment }};
    padding: {{ block.settings.overlay_padding }}px;
    background-color: {{ block.settings.overlay_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-transparent-image-content-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.content_max_width }}%;
    color: {{ block.settings.text_color }};
  }

  .ai-transparent-image-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px 0;
    line-height: 1.2;
    color: {{ block.settings.heading_color }};
  }

  .ai-transparent-image-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
    margin: 0 0 {{ block.settings.text_margin_bottom }}px 0;
    color: {{ block.settings.text_color }};
  }

  .ai-transparent-image-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
  }

  .ai-transparent-image-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .ai-transparent-image-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-transparent-image-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-transparent-image-overlay-{{ ai_gen_id }} {
      padding: {{ block.settings.overlay_padding | times: 0.7 }}px;
    }

    .ai-transparent-image-content-{{ ai_gen_id }} {
      max-width: 95%;
    }
  }
{% endstyle %}

<div
  class="ai-transparent-image-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-transparent-image-wrapper-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 2000 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-transparent-image-img-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-transparent-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-transparent-image-empty-state-{{ ai_gen_id }}">
          Add an image to get started
        </div>
      </div>
    {% endif %}

    {% if block.settings.heading != blank or block.settings.text != blank or block.settings.button_text != blank %}
      <div class="ai-transparent-image-overlay-{{ ai_gen_id }}">
        <div class="ai-transparent-image-content-{{ ai_gen_id }}">
          {% if block.settings.heading != blank %}
            <h2 class="ai-transparent-image-heading-{{ ai_gen_id }}">
              {{ block.settings.heading }}
            </h2>
          {% endif %}

          {% if block.settings.text != blank %}
            <div class="ai-transparent-image-text-{{ ai_gen_id }}">
              {{ block.settings.text }}
            </div>
          {% endif %}

          {% if block.settings.button_text != blank and block.settings.button_link != blank %}
            <a
              href="{{ block.settings.button_link }}"
              class="ai-transparent-image-button-{{ ai_gen_id }}"
            >
              {{ block.settings.button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endif %}
  </div>
</div>

