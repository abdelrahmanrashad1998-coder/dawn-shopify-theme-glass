{% doc %}
  @prompt
    duplicated the current image with text but make it transparent , make image on a small container on the side and a glass text banner 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-glass-banner-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.gap }}px;
    padding: {{ block.settings.container_padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-glass-banner-image-container-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    order: {% if block.settings.image_position == 'right' %}2{% else %}1{% endif %};
  }

  .ai-glass-banner-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-glass-banner-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
    position: relative;
  }

  .ai-glass-banner-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-glass-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 8px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 10px;
    color: #666;
    text-align: center;
    background-color: rgba(255, 255, 255, 0.9);
    padding: 4px 8px;
    border-radius: 4px;
  }

  .ai-glass-banner-content-{{ ai_gen_id }} {
    flex-grow: 1;
    position: relative;
    order: {% if block.settings.image_position == 'right' %}1{% else %}2{% endif %};
  }

  .ai-glass-banner-glass-panel-{{ ai_gen_id }} {
    background: {{ block.settings.glass_background }};
    backdrop-filter: blur({{ block.settings.blur_intensity }}px);
    -webkit-backdrop-filter: blur({{ block.settings.blur_intensity }}px);
    border: 1px solid {{ block.settings.glass_border_color }};
    border-radius: {{ block.settings.glass_border_radius }}px;
    padding: {{ block.settings.glass_padding }}px;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_color }};
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-glass-banner-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px 0;
    line-height: 1.2;
  }

  .ai-glass-banner-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
    margin: 0 0 {{ block.settings.text_margin_bottom }}px 0;
  }

  .ai-glass-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    backdrop-filter: blur({{ block.settings.button_blur }}px);
    -webkit-backdrop-filter: blur({{ block.settings.button_blur }}px);
  }

  .ai-glass-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .ai-glass-banner-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.gap | times: 0.7 }}px;
      padding: {{ block.settings.container_padding | times: 0.7 }}px;
    }

    .ai-glass-banner-image-container-{{ ai_gen_id }} {
      width: 100%;
      max-width: {{ block.settings.image_width }}px;
      height: {{ block.settings.image_height | times: 0.8 }}px;
      order: 1;
    }

    .ai-glass-banner-content-{{ ai_gen_id }} {
      order: 2;
      width: 100%;
    }

    .ai-glass-banner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-glass-banner-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-glass-banner-glass-panel-{{ ai_gen_id }} {
      padding: {{ block.settings.glass_padding | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div
  class="ai-glass-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-glass-banner-image-container-{{ ai_gen_id }}">
    {% if block.settings.image %}
      <img
        src="{{ block.settings.image | image_url: width: 400 }}"
        alt="{{ block.settings.image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.image.width }}"
        height="{{ block.settings.image.height }}"
        class="ai-glass-banner-image-{{ ai_gen_id }}"
      >
    {% else %}
      <div class="ai-glass-banner-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-glass-banner-empty-state-{{ ai_gen_id }}">
          Add image
        </div>
      </div>
    {% endif %}
  </div>

  <div class="ai-glass-banner-content-{{ ai_gen_id }}">
    <div class="ai-glass-banner-glass-panel-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-glass-banner-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.text != blank %}
        <div class="ai-glass-banner-text-{{ ai_gen_id }}">
          {{ block.settings.text }}
        </div>
      {% endif %}

      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a
          href="{{ block.settings.button_link }}"
          class="ai-glass-banner-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

