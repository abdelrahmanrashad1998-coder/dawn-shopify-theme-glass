{% doc %}
  @prompt
    generate an image and text section with a background color 252525 the content inside will be as the following sequence:
    meet the owner (heading)
    image
    text
    use Playfair Display font
    , can you try Cormorant Garamond font
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-meet-owner-section-{{ ai_gen_id }} {
    background-color: #252525;
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    width: 100%;
  }

  .ai-meet-owner-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ block.settings.content_spacing }}px;
    text-align: center;
  }

  .ai-meet-owner-heading-{{ ai_gen_id }} {
    font-family: 'Cormorant Garamond', serif;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: {{ block.settings.heading_weight }};
    line-height: 1.2;
  }

  .ai-meet-owner-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-meet-owner-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-meet-owner-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 400px;
    background-color: #3a3a3a;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.image_border_radius }}px;
    position: relative;
  }

  .ai-meet-owner-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.5;
  }

  .ai-meet-owner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #999;
    font-size: 14px;
    text-align: center;
  }

  .ai-meet-owner-text-{{ ai_gen_id }} {
    font-family: 'Cormorant Garamond', serif;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    max-width: {{ block.settings.text_max_width }}px;
    margin: 0;
  }

  .ai-meet-owner-text-{{ ai_gen_id }} p {
    margin: 0 0 1em;
  }

  .ai-meet-owner-text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-meet-owner-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 16px {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-meet-owner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-meet-owner-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-meet-owner-container-{{ ai_gen_id }} {
      gap: {{ block.settings.content_spacing | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-meet-owner-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-meet-owner-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-meet-owner-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    <div class="ai-meet-owner-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 800 }}"
          alt="{{ block.settings.image.alt | escape }}"
          class="ai-meet-owner-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-meet-owner-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-meet-owner-empty-state-{{ ai_gen_id }}">
            Add an image of the owner
          </div>
        </div>
      {% endif %}
    </div>

    {% if block.settings.text != blank %}
      <div class="ai-meet-owner-text-{{ ai_gen_id }}">
        {{ block.settings.text }}
      </div>
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Meet the owner",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Meet the owner"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Owner image"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text",
      "default": "<p>Share your story, passion, and what drives your business. Connect with your customers on a personal level.</p>"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "heading_size",
      "min": 20,
      "max": 80,
      "step": 2,
      "unit": "px",
      "label": "Heading size",
      "default": 48
    },
    {
      "type": "select",
      "id": "heading_weight",
      "label": "Heading weight",
      "options": [
        {
          "value": "400",
          "label": "Normal"
        },
        {
          "value": "500",
          "label": "Medium"
        },
        {
          "value": "600",
          "label": "Semi bold"
        },
        {
          "value": "700",
          "label": "Bold"
        }
      ],
      "default": "400"
    },
    {
      "type": "range",
      "id": "text_size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Text size",
      "default": 16
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "max_width",
      "min": 600,
      "max": 1400,
      "step": 50,
      "unit": "px",
      "label": "Section max width",
      "default": 800
    },
    {
      "type": "range",
      "id": "image_max_width",
      "min": 200,
      "max": 600,
      "step": 20,
      "unit": "px",
      "label": "Image max width",
      "default": 400
    },
    {
      "type": "range",
      "id": "text_max_width",
      "min": 400,
      "max": 800,
      "step": 20,
      "unit": "px",
      "label": "Text max width",
      "default": 600
    },
    {
      "type": "range",
      "id": "content_spacing",
      "min": 20,
      "max": 80,
      "step": 4,
      "unit": "px",
      "label": "Content spacing",
      "default": 40
    },
    {
      "type": "range",
      "id": "section_padding_top",
      "min": 20,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "section_padding_bottom",
      "min": 20,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "image_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Image border radius",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Meet the owner"
    }
  ]
}
{% endschema %}