{% doc %}
  @prompt
    create a media and text section with white background image first then meet the owner text then a paragraph
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-media-text-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-media-text-container-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: {% if block.settings.layout == 'image_first' %}1fr 1fr{% else %}1fr 1fr{% endif %};
    gap: {{ block.settings.content_gap }}px;
    align-items: {{ block.settings.vertical_alignment }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-media-text-image-wrapper-{{ ai_gen_id }} {
    {% if block.settings.layout == 'text_first' %}
      order: 2;
    {% endif %}
  }

  .ai-media-text-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    object-fit: cover;
  }

  .ai-media-text-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-media-text-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 200px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-media-text-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-media-text-content-{{ ai_gen_id }} {
    {% if block.settings.layout == 'text_first' %}
      order: 1;
    {% endif %}
  }

  .ai-media-text-heading-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px;
    text-align: {{ block.settings.text_alignment }};
    line-height: 1.2;
  }

  .ai-media-text-paragraph-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-weight: {{ block.settings.body_font.weight }};
    font-style: {{ block.settings.body_font.style }};
    font-size: {{ block.settings.body_size }}px;
    color: {{ block.settings.body_color }};
    line-height: {{ block.settings.line_height }};
    margin: 0;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-media-text-paragraph-{{ ai_gen_id }} p {
    margin: 0 0 1em;
  }

  .ai-media-text-paragraph-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-media-text-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-media-text-image-wrapper-{{ ai_gen_id }},
    .ai-media-text-content-{{ ai_gen_id }} {
      order: unset;
    }

    {% if block.settings.mobile_layout == 'text_first' %}
      .ai-media-text-image-wrapper-{{ ai_gen_id }} {
        order: 2;
      }
      .ai-media-text-content-{{ ai_gen_id }} {
        order: 1;
      }
    {% endif %}

    .ai-media-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
    }

    .ai-media-text-paragraph-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_body_size }}px;
    }

    .ai-media-text-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding_top }}px {{ block.settings.mobile_padding_horizontal }}px {{ block.settings.mobile_padding_bottom }}px;
    }
  }
{% endstyle %}

<div class="ai-media-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-media-text-container-{{ ai_gen_id }}">
    <div class="ai-media-text-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.image %}
        <img
          src="{{ block.settings.image | image_url: width: 800 }}"
          alt="{{ block.settings.image.alt | escape }}"
          class="ai-media-text-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      {% else %}
        <div class="ai-media-text-image-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
          <div class="ai-media-text-empty-state-{{ ai_gen_id }}">
            Add an image
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-media-text-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-media-text-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}

      {% if block.settings.paragraph != blank %}
        <div class="ai-media-text-paragraph-{{ ai_gen_id }}">
          {{ block.settings.paragraph }}
        </div>
      {% endif %}
    </div>
  </div>
</div>

