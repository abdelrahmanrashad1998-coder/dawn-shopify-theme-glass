{% doc %}
  @prompt
    generate an image and text section with a background color 252525 the content inside will be as the following sequence:
    meet the owner (heading)
    image
    text (At the heart of Danutti stands Dana El Gendy — a designer who transforms emotion into art.
    Her creations speak through gold, texture, and light, carrying not just craftsmanship but meaning and energy.
    For Dana, jewelry isn’t about perfection, it’s about feeling — each piece reflects her journey, strength, and grace.
    Danutti embodies her spirit: bold yet delicate, timeless yet alive — inviting every woman to wear not just beauty, but emotion.)
    use ovo font
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-meet-owner-section-{{ ai_gen_id }} {
    background-color: #252525;
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    width: 100%;
  }

  .ai-meet-owner-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: {{ block.settings.content_spacing }}px;
    text-align: center;
  }

  .ai-meet-owner-heading-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-weight: {{ block.settings.heading_font.weight }};
    font-style: {{ block.settings.heading_font.style }};
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    line-height: 1.2;
  }

  .ai-meet-owner-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    max-width: {{ block.settings.image_max_width }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-meet-owner-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-meet-owner-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 400px;
    background-color: #3a3a3a;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-meet-owner-image-placeholder-{{ ai_gen_id }} svg {
    width: 100px;
    height: 100px;
    opacity: 0.5;
    color: #666;
  }

  .ai-meet-owner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    color: #999;
    font-size: 14px;
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
  }

  .ai-meet-owner-text-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-style: {{ block.settings.text_font.style }};
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: {{ block.settings.text_line_height }};
    max-width: {{ block.settings.text_max_width }}px;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-meet-owner-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px 16px {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-meet-owner-container-{{ ai_gen_id }} {
      gap: {{ block.settings.content_spacing | times: 0.8 }}px;
    }

    .ai-meet-owner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-meet-owner-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-meet-owner-image-placeholder-{{ ai_gen_id }} {
      height: 300px;
    }
  }
{% endstyle %}

<div class="ai-meet-owner-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-meet-owner-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-meet-owner-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.image %}
      <div class="ai-meet-owner-image-wrapper-{{ ai_gen_id }}">
        <img
          src="{{ block.settings.image | image_url: width: 800 }}"
          alt="{{ block.settings.image.alt | escape }}"
          class="ai-meet-owner-image-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.image.width }}"
          height="{{ block.settings.image.height }}"
        >
      </div>
    {% else %}
      <div class="ai-meet-owner-image-placeholder-{{ ai_gen_id }}">
        {{ 'image' | placeholder_svg_tag }}
        <div class="ai-meet-owner-empty-state-{{ ai_gen_id }}">
          Add an image of the owner
        </div>
      </div>
    {% endif %}

    {% if block.settings.text != blank %}
      <div class="ai-meet-owner-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
    {% endif %}
  </div>
</div>

