{% doc %}
  @prompt
    generate an image and text section 
    Meet the owner
    image
    text
    make it modern and catchy
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-meet-owner-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-meet-owner-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-meet-owner-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: {% if block.settings.layout == 'image_left' %}1fr 1fr{% else %}1fr 1fr{% endif %};
    gap: {{ block.settings.content_gap }}px;
    align-items: center;
  }

  .ai-meet-owner-image-wrapper-{{ ai_gen_id }} {
    {% if block.settings.layout == 'image_right' %}
      order: 2;
    {% endif %}
    position: relative;
  }

  .ai-meet-owner-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: {{ block.settings.image_shadow_horizontal }}px {{ block.settings.image_shadow_vertical }}px {{ block.settings.image_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.image_shadow_opacity | divided_by: 100.0 }});
    transition: transform 0.3s ease;
  }

  .ai-meet-owner-image-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.image_hover_lift }}px);
  }

  .ai-meet-owner-image-placeholder-{{ ai_gen_id }} {
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    aspect-ratio: 4/5;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    box-shadow: {{ block.settings.image_shadow_horizontal }}px {{ block.settings.image_shadow_vertical }}px {{ block.settings.image_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.image_shadow_opacity | divided_by: 100.0 }});
  }

  .ai-meet-owner-image-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-meet-owner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-meet-owner-text-wrapper-{{ ai_gen_id }} {
    {% if block.settings.layout == 'image_right' %}
      order: 1;
    {% endif %}
  }

  .ai-meet-owner-badge-{{ ai_gen_id }} {
    display: inline-block;
    padding: 8px 20px;
    background-color: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: 600;
    border-radius: {{ block.settings.badge_border_radius }}px;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .ai-meet-owner-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_font_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 20px;
    line-height: 1.2;
    font-weight: 700;
  }

  .ai-meet-owner-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.6;
    margin-bottom: 30px;
  }

  .ai-meet-owner-description-{{ ai_gen_id }} p {
    margin-bottom: 16px;
  }

  .ai-meet-owner-description-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-meet-owner-signature-{{ ai_gen_id }} {
    font-size: {{ block.settings.signature_font_size }}px;
    color: {{ block.settings.signature_color }};
    font-style: italic;
    margin-top: 20px;
    position: relative;
  }

  .ai-meet-owner-signature-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: -10px;
    left: 0;
    width: 60px;
    height: 2px;
    background-color: {{ block.settings.accent_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-meet-owner-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .ai-meet-owner-image-wrapper-{{ ai_gen_id }},
    .ai-meet-owner-text-wrapper-{{ ai_gen_id }} {
      order: unset !important;
    }

    .ai-meet-owner-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_font_size | times: 0.8 }}px;
    }

    .ai-meet-owner-signature-{{ ai_gen_id }}::before {
      left: 50%;
      transform: translateX(-50%);
    }
  }
{% endstyle %}

<div class="ai-meet-owner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-meet-owner-container-{{ ai_gen_id }}">
    <div class="ai-meet-owner-content-{{ ai_gen_id }}">
      <div class="ai-meet-owner-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.owner_image %}
          <img
            src="{{ block.settings.owner_image | image_url: width: 600 }}"
            alt="{{ block.settings.owner_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.owner_image.width }}"
            height="{{ block.settings.owner_image.height }}"
            class="ai-meet-owner-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-meet-owner-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
            <div class="ai-meet-owner-empty-state-{{ ai_gen_id }}">
              Add owner photo
            </div>
          </div>
        {% endif %}
      </div>

      <div class="ai-meet-owner-text-wrapper-{{ ai_gen_id }}">
        {% if block.settings.badge_text != blank %}
          <div class="ai-meet-owner-badge-{{ ai_gen_id }}">
            {{ block.settings.badge_text }}
          </div>
        {% endif %}

        {% if block.settings.heading != blank %}
          <h2 class="ai-meet-owner-heading-{{ ai_gen_id }}">
            {{ block.settings.heading }}
          </h2>
        {% endif %}

        {% if block.settings.description != blank %}
          <div class="ai-meet-owner-description-{{ ai_gen_id }}">
            {{ block.settings.description }}
          </div>
        {% endif %}

        {% if block.settings.signature != blank %}
          <div class="ai-meet-owner-signature-{{ ai_gen_id }}">
            {{ block.settings.signature }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

