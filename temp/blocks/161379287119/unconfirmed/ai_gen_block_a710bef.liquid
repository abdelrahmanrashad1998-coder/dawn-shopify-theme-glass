{
  "name": "Meet the owner",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Meet the owner"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Owner image"
    },
    {
      "type": "richtext",
      "id": "text",
