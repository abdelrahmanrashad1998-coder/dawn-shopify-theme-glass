    {
      "type": "range",
      "id": "text_max_width",
      "min": 400,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "label": "Text max width",
      "default": 800
    }
  ],
  "presets": [
    {
      "name": "Meet the owner"
    }
  ]
}
{% endschema %}